
@{
    var chooseError = ViewData["ChooseError"] as string;
}

<form id="designForm" asp-action="Choose" asp-controller="Choose" method="post">
    <div class="container">
        <div class="row">
            <div class="col-lg-7">
                <h3 class="ChooseItem">@EXE.Resources.Resource.ChooseItem</h3>

                <input type="hidden" name="PaperType" id="PaperType">
                <input type="hidden" name="Size" id="Size">
                <input type="hidden" name="BookCuffColor" id="BookCuffColor">
                <input type="hidden" name="NumberOfPages" id="NumberOfPages">
                <input type="hidden" name="ImageFrontPath" id="ImageFrontPath">
                <input type="hidden" name="ImageBackPath" id="ImageBackPath">

                <div class="row row6">
                    <div class="col-lg-5">
                        <p class="paper">@EXE.Resources.Resource.NameOfNote</p>
                        <input class="inputChoose" type="text" name="NotebookName" id="NotebookName">
                    </div>
                    <div class="col-lg-2"></div>
                    <div class="col-lg-5">
                        <p class="paper">@EXE.Resources.Resource.Note</p>
                        <input class="inputChoose" type="text" name="NotebookDescription" id="NotebookDescription">
                    </div>
                </div>

                <div class="row row1">
                    <p class="paper">@EXE.Resources.Resource.Paper</p>
                    <div class="col-lg-3"><button type="button" class="btnChoose" value="Caro">Caro</button></div>
                    <div class="col-lg-3"><button type="button" class="btnChoose" value="Line">Line</button></div>
                    <div class="col-lg-3"><button type="button" class="btnChoose" value="Dot">Dot</button></div>
<p class="alertChangePassword" id="alertChoose" style="display: none;">@EXE.Resources.Resource.ChooseError</p>
                </div>

                <div class="row row2">
                    <p class="paper">@EXE.Resources.Resource.Size</p>
                    <div class="col-lg-3"><button type="button" class="btnChoose" value="A4">A4</button></div>
                    <div class="col-lg-3"><button type="button" class="btnChoose" value="A5">A5</button></div>
                    <div class="col-lg-3"><button type="button" class="btnChoose" value="B5">B5</button></div>
                    <div class="col-lg-3"></div>
                    <p class="alertChangePassword" id="alertChoose" style="display: none;">@EXE.Resources.Resource.ChooseError</p>
                </div>

                <div class="row row3">
                    <p class="paper">@EXE.Resources.Resource.Spring</p>
                    <div class="col-lg-3"><button type="button" class="btnChoose" value="Black">@EXE.Resources.Resource.Black</button></div>
                    <div class="col-lg-3"><button type="button" class="btnChoose" value="White" ">@EXE.Resources.Resource.White</button></div>
                    <div class="col-lg-3"></div>
                    <div class="col-lg-3"></div>
<p class="alertChangePassword" id="alertChoose" style="display: none;">@EXE.Resources.Resource.ChooseError</p>
                </div>

                <div class="row row4">
                    <p class="paper">@EXE.Resources.Resource.Number</p>
                    <div class="col-lg-3"><button type="button" class="btnChoose" value="90">90</button></div>
                    <div class="col-lg-3"><button type="button" class="btnChoose" value="120">120</button></div>
                    <div class="col-lg-3"><button type="button" class="btnChoose" value="200">200</button></div>
                    <div class="col-lg-3"></div>
<p class="alertChangePassword" id="alertChoose" style="display: none;">@EXE.Resources.Resource.ChooseError</p>
                </div>
                <div class="row">
                    <div class="row col-lg-6">
                        <p class="paperDesign">@EXE.Resources.Resource.DesignByYourSelf</p>
                        <div class="col-lg-12"></div>
                        <p class=""></p>
                        <button type="submit" class="btnChoose" name="action" value="design">
                        @EXE.Resources.Resource.Design
                        </button>
                    </div>
                    <div class="row col-lg-6">
                        <p class="paperDesign">@EXE.Resources.Resource.ImportDesign</p>
                        <div class="col-lg-6 row5">
                            <p class="paperDesign">@EXE.Resources.Resource.FrontSide</p>
                            <button type="button" id="selectImageFrontButton" class="btnChoose" value="importFront">@EXE.Resources.Resource.Import</button>
                            <input type="file" id="fileInputFront" style="display: none;" accept="image/*">
                        </div>
                        <div class="col-lg-6 row6">
                            <p class="paperDesign">@EXE.Resources.Resource.BackSide</p>
                            <button type="button" id="selectImageBackButton" class="btnChoose" value="importBack">@EXE.Resources.Resource.Import</button>
                            <input type="file" id="fileInputBack" style="display: none;" accept="image/*">
                        </div>
                    </div>
                </div>
                <div class="submit">
                    <button type="submit" class="btnChooseSubmit btnAdd" name="action" value="add">@EXE.Resources.Resource.Add</button>
                </div>
                <div class="submit">
                    <button type="button" class="btnChooseSubmit">
                        <a asp-action="Index" asp-controller="Demo3D">@EXE.Resources.Resource.WatchDemo</a>
                    </button>
                </div>
                <div class="submit">
                    <button type="button" class="btnChooseSubmit">
                        <a asp-action="Index" asp-controller="Cart">@EXE.Resources.Resource.Payment</a>
                    </button>
                </div>
            </div>
            <div class="col-lg-5">
                <img class="imgDemo" src="/image/Login.png" alt="">
            </div>
        </div>
        <div class="popup">
            <div class="popup-content">
                <img class="popupImage" src="/image/Logo.png" alt="Ảnh">
            </div>
        </div>
        <div class="overlay">
            <div class="popup-alert">
                <h3>Thông báo</h3>
                <p>Đây là thông báo</p>
                <button class="btnPopup">Xác nhận</button>
            </div>
        </div>
    </div>
</form>

<script>
    // Đợi cho tài liệu HTML được tải xong
    document.addEventListener("DOMContentLoaded", function () {
        // Lấy giá trị của chooseError từ ViewData
        var chooseError = "@(ViewData["ChooseError"] as string)";

        // Tìm phần tử alertChoose
        var alertChoose = document.getElementById("alertChoose");

        // Kiểm tra giá trị của chooseError và điều khiển hiển thị của alertChoose
        if (chooseError.trim() === "") {
            alertChoose.style.display = "none"; // Ẩn alertChoose khi chooseError rỗng
        } else {
            alertChoose.innerText = chooseError; // Đặt nội dung cho alertChoose
            alertChoose.style.display = "block"; // Hiển thị alertChoose
        }
    });

</script>